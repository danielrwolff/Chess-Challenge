        "arg='uci'", "arg='MyBot'",
        "-engine",
        "name='Tier2'",
        "cmd='./Chess-Challenge/bin/Debug/net6.0/Chess-Challenge'",
        "arg='uci'", "arg='Tier2'",
        "-each",
        "proto=uci",
        "tc=60+0",
        "-concurrency", "6",
        "-maxmoves", "200",
        "-rounds", "1000",
        //"-sprt", "elo0=1000", "elo1=5", "alpha=0.05", "beta=0.05",
        "-openings", "file='./opening-books/UHO_XXL_+0.80_+1.09.pgn'", "format=pgn"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
