{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Chess-Challenge/Chess-Challenge.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Chess-Challenge/Chess-Challenge.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Chess-Challenge/Chess-Challenge.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CuteChess MyBot vs EvilBot",
      "type": "shell",
      "dependsOn": ["build"],
      "command": "cutechess-cli",
      "args": [
        "-engine",
        "name='MyBot'",
        "cmd='./Chess-Challenge/bin/Debug/net6.0/Chess-Challenge'",
        "arg='uci'", "arg='MyBot'",
        "-engine",
        "name='EvilBot'",
        "cmd='./Chess-Challenge/bin/Debug/net6.0/Chess-Challenge'",
        "arg='uci'", "arg='EvilBot'",
        "-each",
        "proto=uci",
        "tc=10+0",
        "-concurrency", "6",
        "-maxmoves", "200",
        "-rounds", "250",
        "-openings", "file='./opening-books/UHO_XXL_+0.80_+1.09.pgn'", "format=pgn"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}